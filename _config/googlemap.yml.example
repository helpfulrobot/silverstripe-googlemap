#########################################
# START GOOGLE MAPS
#########################################

GoogleMap:
  # IMPORTANT ####################
  GoogleMapAPIKey: "abc" # CHANGE ME
  ################################

  uses_sensor: true
  defaultLatitude: 12.001
  defaultLongitude: 133.2210
  defaultZoom: 2
  GoogleMapWidth: 473 #map width in pixels (ranges from around 100 to 900)
  GoogleMapHeight: 525 #map height in pixels (ranges from around 100 to 600)
  MapTypeDefaultZeroToTwo: 3 # "0" => "normal", "1" => "satellite", "2" => "satellite with markings", "3" => "natural"
  ViewFinderSize: 200 #size of the view finder in pixels (e.g. 250)
  MapAddTypeControl: true #Allow the visitor to change the map type (e.g. from a satellite to a normal map)
  MapControlSizeOneToThree: 3 #map controller size (allows user to zoom and pan)", array("1" => "small", "2" => "medium", "3" => "large"), $value = "3"));
  MapScaleInfoSizeInPixels: 150 #size of the map scale in pixels (default is 100)
  ShowStaticMapFirst: 0 #if set to 1, the map will load as a picture rather than an interactive map, with the opportunity to start an interactive map - you need to set this to 1 (true)
  number_shown_in_around_me: 7 #if set to 1, the map will load as a picture rather than an interactive map, with the opportunity to start an interactive map - you need to set this to 1 (true)

  # STATIC MAP SETTINGS

  StaticMapSettings: "maptype=terrain"
  StaticIcon: "red1" #- -e.g. bluea - alternatively you can use the setDefaultIcon to any absolute URL
  save_static_map_locally: false

  #INCLUSIONS

  NoStatusAtAll: false #hide map status (which shows information like ... loading new points now ...)
  HiddenLayersRemovedFromList: false #remove points hidden by visitors to your map
  AddAntipodean: false #add antipodean option (allowing visitors to find the exact opposite point on earth)
  ChangePageTitle: false #adjust the page title when you change the map
  AddDirections: false #add directions finder to map pop-up windows
  AddAddressFinder: false #provide an address finder helping visitors to enter an address and search for it on the map

  # POLYS

  LineColour: "#dcb916" # colour for additional lines (e.g. routes) on map (use web colour codes)
  LineWidth: 5 #width of the line in pixels
  LineOpacity: 0.5 #opacity for the line (default is 0.5 - should range from transparent: 0 to opaque: 1
  FillColour: "#dcb916" #colour for polygons (e.g. regions) on map
  FillOpacity: 0.3 #opacity for polygons (default is 0.3 - should range from transparent: 0 to opaque: 1)
  PolyIcon: "" #location for icon used for polygon and polyline (e.g. http: #www.mysite.com/icon.png)

  # HELPDIVS

  SideBarDivId: "" #ID for DIV that shows additional information about map leave blank to remove)"
  setDropDownDivId: "GoogleMapDropDownList" #ID for DIV of dropdown box with points in map (leave blank to remove)
  TitleDivId: "GmapTitleID"  #ID for DIV of map title (leave blank to remove)
  LayerListDivId: "" #ID for DIV that shows list of map layers (leave blank to remove)
  DirectionsDivId: "" #ID for DIV that shows directions from map (leave blank to remove)
  StatusDivId: ""  #ID for DIV that shows status of map

  # INFOWINDOW

  InfoWindowOptions: "{maxWidth: 280, zoomLevel:17, mapType:G_HYBRID_MAP}" #info window options (see http: #code.google.com/apis/maps/documentation/reference.html for details)
  AddCurrentAddressFinder: false  #add a tab with the address finder
  AddZoomInButton: "" #add a "zoom in" link on info window, should be emptry string or text for button.
  AddCloseUpButton: "" #add a "close-up" link on info window, shouldbe emptry string or text for button.
  AddCloseWindowButton: "" #add a "close window" link on info window, shouldbe emptry string or text for button.  
  ajax_info_window_text: "view details"

  # MARKER

  MarkerOptions: "{draggable:false,bouncy:true,title: 'click me'}" #marker options (see http: #code.google.com/apis/maps/documentation/reference.html for details)
  AddPointsToMap: true
  AddDeleteMarkerButton: "remove this location"
  AllowMarkerDragAndDrop: true
  PreloadImages: true #!!! redundant if used in # ICONS

  # ICONS

  PreloadImages: true #!!! redundant if used in # MARKER
  DefaultIconUrl: ""
  IconFolder: "googlemap/iamges/icon/" #default Icon Folder - icons need to be name: i1, i2, i3, i4, etc...
  IconWidth: 20
  IconHeight: 34
  IconImageMap: "[0,0 , 3,2 , 7,7]" # can leave blank by setting it to []
  IconExtension: "png" #default icon extension (e.g. png, gif or jpg)
  IconMaxCount: 12  #maximum number of layers, before reverting back to icon number one (e.g. 12)

  # SERVER INTERACTION

  LatFormFieldId: "" #latitude form field to be updated on new marker creation or marker movement
  LngFormFieldId: "" #longitude form field to be updated on new marker creation or marker movement

  # ADDRESS

  DefaultCountryCode: ""
  DefaultAddressText: ""
  StyleSheetUrl: "googlemap/css/googleMapDirections.css"
  LocaleForResults: "en_NZ"

GoogleMapLocationsDOD_Controller:
  class_name_only: "MyPage"

#########################################
# END GOOGLE MAPS
#########################################